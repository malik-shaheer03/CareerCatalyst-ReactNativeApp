rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Employers collection - users can create their own employer profile
    match /employers/{employerId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
    
    // Employees collection - users can create their own employee profile
    match /employees/{employeeId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      
      // Resumes subcollection - users can manage their own resumes
      match /resumes/{resumeId} {
        allow read, write: if request.auth != null && request.auth.uid == employeeId;
        allow create: if request.auth != null && request.auth.uid == employeeId;
      }
    }
    
    // Public job listings (readable by all authenticated users)
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/employers/$(request.auth.uid));
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.employerId;
    }
  }
}

